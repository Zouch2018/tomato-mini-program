/* pages/my/my.wxss */
.container {
  height: 100vh;
  background: #f6f6f6;
  color:#333;
  margin-bottom: 5rpx;
}
.container .header {
  height: 170rpx;
  width: 100%;
  display: flex;
  align-items: center;
  background: #fff;
}

.container .header .avatar {
  border-radius: 50%;
  width: 120rpx;
  height: 120rpx;
  padding-left:25rpx;
}
.container .header .detail {
  display: flex;
  flex-direction: column;
  padding-left:25rpx;
}
.container .header .qr {
  display: flex;
  flex-direction: flex-end;
  align-items: center;
  margin-right: 25rpx;
}
.container .tabs {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 6rpx;
  width: 750rpx;
  height: 80rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
}
.tabs > view.hover-active { 
  opacity: 0.5;
 }
 .tabs>view {
   position: relative;
   
 }
.tabs > view.active::after {
  content: "";
  width: 80%;
  height: 8rpx;
  border-radius: 4rpx;
  background: #FE996F;
  position: absolute;
  left: 50%;
  bottom: -20rpx;
  transform: translate(-50%,-50%);
}


.container .lists{
  flex: 1;
  padding: 0 24rpx;
  box-sizing: border-box;
  overflow:scroll;
  background: #f6f6f6;
}
.container .lists .item {
  font-size: 32rpx;
  color: #333;
  background: #fff;
  border-radius: 8rpx;
  padding: 16rpx 28rpx 35rpx 40rpx;
  box-shadow: 0 2rpx 6rpx 0 rgba(0,0,0,0.1);
  margin-bottom: 32rpx;
}

.container  .lists .item .time{
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}
.container .lists .item .content {
  display: flex;
  padding-bottom: 24rpx;
}
.container .lists .item .content text{
  padding-right: 25rpx;
}
.container .lists .item .content .detail {
  flex: 1;
  flex-wrap: wrap;
}
.qr::after {
  border:none;
}
.qr{background: transparent; color:#fe996f;font-size: 24rpx;}